<% layout('layouts/boilerplate') -%>


<div class="d-flex offset-3 border p-4 rounded shadows" style="max-width: 50%;">
    

    <div class="col-12" >
        <h1 class="titleSpacing">Add a New Campground</h1>
        <form action="/campgrounds/new" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">

            <div>
                <label class="form-label textSpacing" for="title">Title</label>
                <input class="form-control" type="text" name="campground[title]" id="title" required>
            </div>
    <br>
            <div>
                <label class="form-label textSpacing" for="location">Location</label>
                <input class="form-control" type="text" name="campground[location]" id="location" required>
            </div>

            <!-- <div class="my-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" name="campground[image]" id="image" placeholder="http://" required>
            </div> -->
            <p class="mt-3 mb-0 textSpacing"><label for="Upload Image">Image</label></p>
            <input class="mt-2" type="file" id="Upload Image" name="image" multiple>

            <div class="my-3">
                <label class="form-label textSpacing" for="price">Price</label>
                <input class="form-control" type="number" name="campground[price]" id="price"  required>
            </div>

            <div>
                <label class="form-label textSpacing" for="description">Description</label>
                <textarea class="form-control" name="campground[description]" id="description" cols="30" rows="3" required></textarea>
            </div>
    
            <button class="btn btn-secondary my-3">Add Camp</button>
            <a class="btn btn-info" href="/campgrounds">Cancel</a>
        </form>
       
            

    </div>
</div>

    
    
    

